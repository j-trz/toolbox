{
  "manifest_version": 3,
  "name": "Administrador - Toolbox",
  "version": "1.0.0",
  "description": "Administrador de entradas GDS-Toolbox",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "theme_icons": [
      {
        "light": true,
        "icon": {
          "16": "icon.png",
          "32": "icon.png"
        }
      },
      {
        "dark": true,
        "icon": {
          "16": "icon-dark.png",
          "32": "icon-dark.png"
        }
      }
    ]
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://cm.farelogix.com/*",
        "https://dcwebc.farelogix.com/*",
        "https://www.agency.latamairlines.com/*",
        "https://www.booking7.sellingplatformconnect.amadeus.com/*"
      ],
      "js": ["popup.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "identity.email",
    "webNavigation",
    "webRequest"
  ]
}
